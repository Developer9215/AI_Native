{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/status",
      "dest": "/server.js"
    },
    {
      "src": "/set-status",
      "dest": "/server.js"
    },
    {
      "src": "/analyze-mood",
      "dest": "/server.js"
    },
    {
      "src": "/agent",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}